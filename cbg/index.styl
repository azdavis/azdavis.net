@import "/base/variables"

*
    box-sizing border-box

html
body
    height 100%

html
    background dark
    color light
    font 16px/1.3 mono
    user-select none
    text-size-adjust()
    font-smoothing()

body
    margin 0

canvas
    display block
    margin auto
    cursor pointer
    touch-action manipulation
    -webkit-tap-highlight-color #0000

#container
    display flex

#msg
    width 100%
    padding 1ch
    text-align center
