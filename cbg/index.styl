@import "/base/constants"

*
    box-sizing border-box

html
body
    height 100%

html
    background dark
    color light
    font 16px/1.3 ff-monospace
    user-select none
    text-size-adjust()
    font-smoothing()

body
    margin 0
    padding 1ch

canvas
    display block
    margin auto

noscript div
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 1ch
    background dark
    text-important()

#btns
    gap = 0.5ch
    display flex
    max-width 60ch
    margin 0 auto (gap)
    div
        flex-basis 100%
        margin 0 (gap)
        padding 1em
        border-radius 1em
        background #44a
        text-important()
        clickable()
        &:first-child
            margin-left 0
        &:last-child
            margin-right 0

#container
    display flex
