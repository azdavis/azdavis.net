@import "/base/constants"

*
    box-sizing border-box

html
body
    height 100%

html
    background dark
    color light
    font 16px/1.3 ff-monospace
    user-select none
    text-size-adjust()
    font-smoothing()

body
    margin 0

canvas
    display block
    margin auto

noscript div
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 1ch
    text-align center
    background #d22
    font-size 2em

#btns
    clickable()
    div
        padding 1em
        text-align center

#gen
    background #4a4

#container
    display flex
