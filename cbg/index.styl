@import "/base/constants"

*
    box-sizing border-box

html
body
    height 100%

html
    background dark
    color light
    font 16px/1.3 ff-monospace
    user-select none
    text-size-adjust()
    font-smoothing()

body
    margin 0

canvas
    display block
    margin auto

noscript div
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 1ch
    background dark
    font-size 2em
    text-align center

#btns
    max-width 50ch
    margin 0 auto
    padding 1ch
    div
        padding 1em
        border-radius 1em
        font-weight bold
        text-align center
        clickable()

#gen
    background #44a

#container
    display flex
