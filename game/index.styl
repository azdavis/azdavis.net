html
    background #222
    color #ddd
    font-family Input, Menlo, Consolas, "Liberation Mono", monospace
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

body
    margin 0
    padding 10px

h1
    font-size 2em
    margin 0.666em 0

canvas
    display block
    position absolute
    z-index -9
    top 0
    left 0

.modal
    max-width 300px
    margin 15vh auto 0
    padding 10px
    border-radius 10px
    background #ddd
    color #222
    h1
        text-align center
    dt
        font-weight bold

.info
    display none
