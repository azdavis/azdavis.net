@import "/base/variables"

html
    background light
    color dark
    font 16px/1.3 mono
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

body
    max-width 80ch
    margin 0 auto
    padding 1.3em 1ch

#url
    display none
    margin 0 0 1.3em
    font-weight bold
    overflow hidden
    text-overflow ellipsis
