html
    background #ddd
    color #222
    font-family Input, Menlo, Consolas, "Liberation Mono", monospace
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

body
    max-width 80ch
    margin 0 auto
    padding 1ch

a
a:visited
    color inherit

.top div
    display inline-block
    width 33.333%

.ct
    text-align center

.rt
    text-align right

h2
    margin 1em 0 0
    font-size 1em
    font-weight bold

.indent
    margin-left 7ch
    @media only screen and (max-width 600px)
        margin-left 2ch
