@import "/base/variables"

html
    background light
    color dark
    font-family mono
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

.dark
    background dark
    color light
    -moz-osx-font-smoothing greyscale
    -webkit-font-smoothing antialiased

body
    max-width 80ch
    margin 0 auto
    padding 1em 1ch

h2
h3
    font-size 1em

h2
.bot
    margin 1em 0 0

h3
    margin 0

p
    margin 0 0 1em

a
a:visited
    color inherit

.three div
    display inline-block
    width 33.333%
    &:nth-child(2)
        text-align center
    &:last-child
        text-align right

.sec
    margin 0 6ch 0

.opt
    margin 0 0 1em 4ch

@media only screen and (max-width phone)
    .sec
        margin 0 3ch 0
    .opt
        margin 0 0 1em 2ch
