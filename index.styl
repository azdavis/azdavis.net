*
    box-sizing border-box

html
body
    height 100%

html
    animation bg 20s linear infinite
    color #222
    font-size 3em
    font-family sans-serif
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased

body
    margin 0
    padding 10px

a
    background transparent
    -webkit-text-decoration-skip objects

.big
    margin 0.5em 0

.center
    margin-top 15vh
    text-align center

.icon
    display inline-block
    margin 0 10px
    img
        display block
        height 1em
        &:hover
            opacity 0.5

@keyframes bg
    0%
        background #dd2
    14.286%
        background #d22
    28.571%
        background #d2d
    42.857%
        background #22d
    57.143%
        background #2dd
    85.714%
        background #2d2
    100%
        background #dd2
