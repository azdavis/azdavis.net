*
    box-sizing border-box

html
body
    height 100%

html
    animation bgc 20s infinite
    color #222
    font-size 44px
    font-family Menlo, Consolas, monospace
    text-rendering optimizeLegibility
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased

body
    margin 0 auto
    padding 10px

a
    background transparent
    -webkit-text-decoration-skip objects

p
    margin 0.5em 0

.center
    margin-top 20vh
    text-align center

.octo
    display inline-block
    svg
        display block
    path
        fill #222
    &:hover path
        fill #66d

@keyframes bgc
    0%
        background #dd2
    14.286%
        background #d22
    28.571%
        background #d2d
    42.857%
        background #22d
    57.143%
        background #2dd
    85.714%
        background #2d2
    100%
        background #dd2
