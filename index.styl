@import "/base/constants"

*
    box-sizing border-box

html
    background light
    color dark
    font 16px/1.3 mono
    text-size-adjust()

.dark
    background dark
    color light
    font-smoothing()

body
    max-width 82ch
    margin 0 auto
    padding 1.3em 1ch

header
section
footer
    display block

section div
    margin 0 6ch 0

h2
h3
    font-size 1em

h2
footer
    margin 1.3em 0 0

h3
    margin 0

p
    margin 0 0 1.3em

a
    text-decoration none
    &:hover
        text-decoration underline
    &
    &:visited
        color inherit

.two div
    display inline-block
    width 50%
    &:last-child
        text-align right

.opt
    margin 0 0 1.3em 4ch

@media only screen and (max-width phone)
    section div
        margin 0 3ch 0
    .opt
        margin 0 0 1.3em 2ch
