@import "/base/variables"

html
    height 100%
    background dark
    color light
    font 16px/1.3 mono
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

body
    height calc(100% - 2 * 2em)
    margin 0

h1
    text-align center

dt
    font-weight bold

dd
    margin 0 0 1em 4ch

canvas
    display block
    position absolute
    z-index -9
    top 0
    left 0

.modal
    max-width 50ch
    max-height calc(100% - 2 * 1ch)
    margin 1em auto
    padding 1ch
    border-radius 1ch
    background light
    color dark
    overflow scroll

.info
    display none
    padding 1ch
    white-space pre
    -moz-osx-font-smoothing greyscale
    -webkit-font-smoothing antialiased

#msg
    padding 1ch
    color light
    text-align center
    font-weight bold

.red
    background #a22

.green
    background #2a2

@media only screen and (max-width phone)
    html
        background light
    body
        height auto
    dd
        margin 0 0 1em 2ch
    .modal
        max-height none
        margin 0 auto
