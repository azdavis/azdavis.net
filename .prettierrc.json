{
  "overrides": [
    {
      "files": "*.code-workspace",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.js",
      "options": {
        "arrowParens": "always",
        "bracketSpacing": false,
        "trailingComma": "all",
        "parser": "babylon"
      }
    },
    {
      "files": "*.jsx",
      "options": {
        "arrowParens": "always",
        "bracketSpacing": false,
        "trailingComma": "all",
        "parser": "babylon"
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
