// default styles

* // @stylint ignore
    box-sizing border-box

// global variables

$dark = #222
$light = #ddd

$mono = Input, Menlo, Consolas, "Liberation Mono", monospace
$sf = Georgia, serif
$ssf = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif

// useful functions

text-base($family)
    font 16px/1.3 $family
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

text-smooth()
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased

text-important()
    font-weight bold
    text-align center

clickable()
    cursor pointer
    touch-action manipulation
    -webkit-tap-highlight-color transparent
    &:active
        opacity 0.8
