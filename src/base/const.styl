* // @stylint ignore
    box-sizing border-box

$dark = #222
$light = #eee
$link = #22a

$phone = 600px
$fz = 18px
$lh = 1.4

$mono = Menlo, Consolas, "Liberation Mono", monospace
$sf = Palatino, Georgia, serif
$ssf = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif

text-smooth()
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased

clickable()
    cursor pointer
    touch-action manipulation
    -webkit-tap-highlight-color transparent
    &:active
        opacity 0.8
