@import "/src/base/styl/var"
@import "/src/base/styl/main_text_dark"
@import "/src/base/styl/a"
@import "/src/base/styl/a_dark"

html
    color $dark
    font medium/$lh $mono

body
    max-width 700px
    margin 1em auto
    padding 10px

h1
h2
    margin 0
    font-size 1em

dl
    margin 0

dd
    margin 0 0 1em 2em

p
    margin 0 0 1em

.sec
    display block
    margin 0 3em 1em

@media only screen and (max-width $phone)
    .sec
        margin-left 1.5em
        margin-right 1.5em
    dd
        margin-left 1em
