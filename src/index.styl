@import "/src/base/const"

html
    background $light
    color $dark
    text-base(mono)

.dark
    background $dark
    color $light
    text-smooth()

body
    max-width 82ch
    margin 0 auto
    padding 1.3em 1ch

header
section
footer
    display block

section
footer
    margin 1.3em 0 0

section div
    margin 0 6ch

h2
h3
    margin 0
    font-size 1em

p
    margin 0 0 1.3em

a
    text-decoration none
    &:hover
        text-decoration underline
    &
    &:visited
        color inherit

.two div
    display inline-block
    width 50%
    &:last-child
        text-align right

.opt
    margin 0 0 1.3em 4ch

@media only screen and (max-width 600px)
    section div
        margin 0 3ch
    .opt
        margin 0 0 1.3em 2ch
