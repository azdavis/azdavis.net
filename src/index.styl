@import "/src/base/const"

html
    background $dark
    color $light
    font $fz/$lh $mono
    text-smooth()

body
    max-width 82ch
    margin 0 auto
    padding ($lh)em 1ch

header
section
footer
    display block

section
footer
    margin ($lh)em 0 0

section div
    margin 0 6ch

dl
    margin 0

dt
    font-weight bold

dd
    margin 0 0 ($lh)em 4ch

h2
    margin 0
    font-size 1em

p
    margin 0 0 ($lh)em

a
a:visited
    color inherit

a:active
a:hover
    outline 0

.three div
    display inline-block
    width 33.3333%
    &:nth-child(2)
        text-align center
    &:last-child
        text-align right

.nw
    white-space nowrap

@media only screen and (max-width $phone)
    section div
        margin 0 3ch
    dd
        margin 0 0 ($lh)em 2ch
    .three div
        width 50%
        &:nth-child(2)
            display none
