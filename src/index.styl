@import "/src/base/const"

html
    background $light
    color $dark
    font $fz/$lh $sf

body
    max-width 45em
    margin 1em auto
    padding 0.5em

h2
    margin 0
    font-size 1em

section
    display block
    margin-bottom 1em
    div
        margin 0 3em

code
    font-family $mono
    font-size 0.9em

dl
    margin 0

dd
    margin 0 0 1em 2em

p
    margin 0 0 1em

a
    text-decoration none
    &
    &:visited
        color $link
    &:active
    &:hover
        outline 0
    &:hover
        text-decoration underline

.nw
    white-space nowrap

@media only screen and (max-width $phone)
    section div
        margin-left 1.5em
        margin-right 1.5em
    dd
        margin-left 1em
