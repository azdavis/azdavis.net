@import "/src/base/styl/var"
@import "/src/base/styl/a"

html
    color $dark
    font-family $mono
    line-height $lh

body
    max-width 45em
    margin 1em auto
    padding 10px

h1
h2
    margin 0
    font-size 1em

.sec
    display block
    margin 0 3em 1em

dl
    margin 0

dd
    margin 0 0 1em 2em

p
    margin 0 0 1em

.nw
    white-space nowrap

@media only screen and (max-width $phone)
    .sec
        margin-left 1.5em
        margin-right 1.5em
    dd
        margin-left 1em
