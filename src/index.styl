@import "/src/base/var"
@import "/src/base/a"

html
    color $dark
    font $fz/$lh $serif

body
    max-width 40em
    margin 1em auto
    padding 10px

h2
    margin 0
    font-size 1em

section
    display block
    margin-bottom 1em
    div
        margin 0 3em

code
    font-size 0.9em
    font-family $mono

dl
    margin 0

dd
    margin 0 0 1em 2em

p
    margin 0 0 1em

.nw
    white-space nowrap

@media only screen and (max-width $phone)
    section div
        margin-left 1.5em
        margin-right 1.5em
    dd
        margin-left 1em
