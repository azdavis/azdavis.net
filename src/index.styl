@import "/src/base/var"
@import "/src/base/a"
@import "/src/base/code-pre"

html
    color $dark
    font $fz/$lh $serif

body
    max-width 40em
    margin 1em auto
    padding 10px

h2
    margin 0
    font-size 1em

.sec
    display block
    margin 0 3em 1em

dl
    margin 0

dd
    margin 0 0 1em 2em

p
    margin 0 0 1em

.nw
    white-space nowrap

@media only screen and (max-width $phone)
    section div
        margin-left 1.5em
        margin-right 1.5em
    dd
        margin-left 1em
