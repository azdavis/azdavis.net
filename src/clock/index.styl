*
	box-sizing: border-box

html
	color: #222
	font: medium/1.3 Input, Menlo, Consolas, "Liberation Mono", monospace
	overflow: hidden
	transition: background 1s

body
	margin: 0

noscript div
	padding: 10px
	text-align: center

#clock
	display: none
	position: absolute
	user-select: none
	cursor: default

.row
	display: flex
	justify-content: space-between
	*
		transition: color 1s
	:not(.on)
		color: #eee
