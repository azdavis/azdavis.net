@import "/src/base/styl/var"
@import "/src/base/styl/h1_h2_h3"

html
    user-select none
    font $fz/$lh $sans
    -webkit-font-smoothing subpixel-antialiased

body
    margin 0

h1
    text-align center

dt
    font-weight bold

dd
    margin 0 0 1em 2em

canvas
    display block
    position absolute
    left 0
    top 0
    z-index -9

code
    font 0.9em $mono

#modal
    max-width 550px
    margin 2em auto 0
    padding 10px
    border-radius 10px
    background $light
    color $dark
    user-select auto

#info
    display none
    padding 10px
    color $light
    font-size $fz_mono
    font-family $mono
    white-space pre
    $text_smooth()

#msg
    padding 10px
    color $light
    font-weight bold
    text-align center

.red
    background $red

.green
    background $green

@media only screen and (min-width $phone)
    html
        background $dark

@media only screen and (max-width $phone)
    dd
        margin-left 1em
    #modal
        margin-top 0
