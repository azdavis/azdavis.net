@import "../base/box_sizing"

html
    color #222
    font large/1.5 Palatino, Georgia, serif

body
    max-width 800px
    margin 1em auto
    padding 10px

h1
    margin 0.67em 0
    font-size 2em
    line-height 1.3

@media not print
    .dark
        background #222
        color #ddd
        -moz-osx-font-smoothing grayscale
        -webkit-font-smoothing antialiased
