@import "../base/box_sizing"
@import "../base/a"

html
    color #222
    font large/1.5 Palatino, Georgia, serif

body
    max-width 800px
    margin 1em auto
    padding 10px


h1
    margin 0.67em 0
    font-size 2em

h1
h2
h3
    line-height 1.3

p
dl
    margin 0

dt
dd
    display inline-block
    vertical-align top

dt
    width 20%
    font-style italic

dd
    width 80%
    margin 0 0 0.5em
    padding-left 1em
    text-indent -1em

.sep
    margin 0 0.5em
    &::after
        content "-"

.print
    display none

@media only screen and (max-width 600px)
    dt
    dd
        display block
        width auto
    dd
        margin-left 1.5em

@media only print
    html
        font-size small
        color #222
    body
        max-width none
        margin 0
        padding 0
    h1
    h2
    h3
        margin 0.75em 0 0.25em
    a
        color inherit
    .print
        display inline
    [data-print] // @stylint ignore
        font-size 0
        &::after
            content attr(data-print)
            font-size 1rem
            color inherit

@media not print
    .dark
        background #222
        color #ddd
        -moz-osx-font-smoothing grayscale
        -webkit-font-smoothing antialiased
