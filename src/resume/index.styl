@import "/src/base/var"
@import "/src/base/main-text"
@import "/src/base/a"
@import "/src/base/h1-h2-h3"

p
dl
    margin 0

dt
dd
    display inline-block
    vertical-align top

dt
    width 20%
    font-style italic

dd
    width 80%
    margin 0 0 0.5em
    padding-left 1em
    text-indent -1em

.sep
    margin 0 0.5em
    &::after
        content "|"

.sc
    font-variant small-caps

.print
    display none

@media only screen and (max-width $phone)
    dt
    dd
        display block
        width auto
    dd
        margin-left 1.5em

@media only print
    html
        font-size small
    body
        margin 0 auto
        padding 0
    h2
        font-size 1.25em
    .print
        display inline
    .contact [data-print]
        font-size 0
        color inherit
        &::after
            content attr(data-print)
            font-size 1rem
